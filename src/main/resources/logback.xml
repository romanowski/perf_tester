<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>\(%logger{30}\)%green(%X{debugId}) %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="SBTBOT" class="ch.qos.logback.core.FileAppender">
        <file>sbtbot.log</file>
        <append>false</append>
        <encoder>
            <pattern>\(%logger{30}\)%green(%X{debugId}) %msg%n</pattern>
        </encoder>
    </appender>
    <root level="${log.root:-warn}">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="SBTBotConsole" level="INFO" additivity="false">
        <appender-ref ref="SBTBOT"/>
    </logger>

</configuration>
